class Solution {
public:
    int largestPathValue(string colors, vector<vector<int>>& edges) {
        int n = colors.size();
        vector<vector<int>> graph(n);
        vector<int> indegree(n, 0);

        // Build graph and compute indegrees
        for (auto& edge : edges) {
            graph[edge[0]].push_back(edge[1]);
            indegree[edge[1]]++;
        }

        // DP table: dp[i][c] = max count of color c at node i
        vector<vector<int>> dp(n, vector<int>(26, 0));

        queue<int> q;
        // Push all nodes with indegree 0
        for (int i = 0; i < n; ++i) {
            if (indegree[i] == 0)
                q.push(i);
        }

        int visited = 0, maxColorCount = 0;

        while (!q.empty()) {
            int node = q.front(); q.pop();
            visited++;

            int colorIndex = colors[node] - 'a';
            dp[node][colorIndex]++;
            maxColorCount = max(maxColorCount, dp[node][colorIndex]);

            for (int neighbor : graph[node]) {
                for (int c = 0; c < 26; ++c) {
                    dp[neighbor][c] = max(dp[neighbor][c], dp[node][c]);
                }

                indegree[neighbor]--;
                if (indegree[neighbor] == 0)
                    q.push(neighbor);
            }
        }

        // Agar cycle hai (saare nodes visit nahi hue)
        if (visited < n) return -1;

        return maxColorCount;
    }
};

class Solution {
public:
    bool isValid(string s) {
        if (s.length() < 3) return false;

        int vowels = 0, consonants = 0;
        unordered_set<char> vowelsSet = {'a', 'e', 'i', 'o', 'u',
                                         'A', 'E', 'I', 'O', 'U'};

        for (char c : s) {
            if (isalpha(c)) {
                if (vowelsSet.count(c)) vowels++;
                else consonants++;
            } else if (!isdigit(c)) {
                return false;
            }
        }

        return vowels >= 1 && consonants >= 1;
    }
};
